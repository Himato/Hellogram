@model HelloGram.Core.ViewModels.MessengerViewModel
@{
    Layout = "_MessengerLayout.cshtml";
}

<div class="main" data-mobile-height="">
    <!-- Default Page -->
    <div class="chat flex-column justify-content-center text-center">
        <div class="container">

            <div class="avatar avatar-lg mb-5">
                <img src="/Content/Images/Users/@Model.UserViewModel.Image" alt="@Model.UserViewModel.Username">
            </div>

            <h6>Hey, @Model.UserViewModel.Name!</h6>
            <p>Please select a chat to start messaging.</p>
        </div>
    </div>
</div>