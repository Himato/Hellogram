@model HelloGram.Core.ViewModels.MessengerSettingsViewModel
@{
    ViewBag.Title = "Settings";
    Layout = "_Tab.cshtml";
}

<!-- Accordion -->
<div class="accordion mb-n6">
    <!-- Card -->
    <div class="card mb-6">
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item pt-0 px-0">
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <!-- Title -->
                        <h6 class="mb-0">Notifications Sound</h6>
                        <!-- Switch -->
                        <div class="custom-control custom-switch mr-n3">
                            <input type="checkbox" class="custom-control-input" id="notifications-sound-switch"@(Model.NotificationSound ? " checked" : "")>
                            <label class="custom-control-label" for="notifications-sound-switch"></label>
                        </div>
                    </div>
                    <p>Turn on/off the notifications theme.</p>
                </li>

                <li class="list-group-item px-0">
                    <div class="d-flex justify-content-between mb-2">
                        <!-- Title -->
                        <h6 class="mb-0">Dark Theme</h6>
                        <!-- Switch -->
                        <div class="custom-control custom-switch mr-n3">
                            <input type="checkbox" class="custom-control-input" id="dark-theme-switch"@(Model.DarkTheme ? " checked" : "")>
                            <label class="custom-control-label" for="dark-theme-switch"></label>
                        </div>
                    </div>
                    <p>Turn on/off the dark theme.</p>
                </li>

                <li class="list-group-item pb-0 px-0">
                    <div class="d-flex justify-content-between mb-2">
                        <!-- Title -->
                        <h6 class="mb-0">Active State</h6>
                        <!-- Switch -->
                        <div class="custom-control custom-switch mr-n3">
                            <input type="checkbox" class="custom-control-input" id="active-state-switch"@(Model.ActiveState ? " checked" : "")>
                            <label class="custom-control-label" for="active-state-switch"></label>
                        </div>
                    </div>
                    <p>You'll still appear active or recently active unless you turn off this setting.</p>
                </li>
            </ul>
        </div>
    </div>
</div>