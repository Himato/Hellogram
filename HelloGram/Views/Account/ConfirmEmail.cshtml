@{
    ViewBag.Title = "Confirm Email";
    Layout = "_Shared.cshtml";
}

<div class="container mt--8 pb-5">
    <!-- Table -->
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-8">
            <div class="card bg-secondary shadow border-0">
                <div style="margin:30px;">
                    <h1 style="color:#172b4d;">@ViewBag.Title</h1>
                    <p style="color:#172b4d;">Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
                </div>
            </div>
        </div>
    </div>
</div>